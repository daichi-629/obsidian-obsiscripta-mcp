{
	"name": "obsiscripta-bridge-monorepo",
	"version": "0.2.2",
	"private": true,
	"description": "Monorepo for ObsiScripta Bridge - Obsidian plugin and stdio MCP bridge",
	"packageManager": "pnpm@10.28.1",
	"type": "module",
	"scripts": {
		"build": "pnpm -r build",
		"dev": "pnpm -r dev",
		"lint": "pnpm -r lint",
		"plugin": "pnpm --filter obsiscripta-bridge-plugin",
		"bridge": "pnpm --filter obsidian-mcp-bridge",
		"remote": "pnpm --filter @obsiscripta/remote-mcp-server",
		"version": "node scripts/sync-version.mjs",
		"version:sync": "node scripts/sync-version.mjs",
		"version:patch": "node scripts/bump-version.mjs patch",
		"version:minor": "node scripts/bump-version.mjs minor",
		"version:major": "node scripts/bump-version.mjs major",
		"test": "pnpm -r --if-present test",
		"test:integration": "pnpm --filter @obsiscripta/integration-tests run test"
	},
	"keywords": [],
	"license": "0-BSD"
}
